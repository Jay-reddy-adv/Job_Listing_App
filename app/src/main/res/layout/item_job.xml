<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Job Title Label -->
    <TextView
        android:id="@+id/jobTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Title"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Job Title -->
    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Title"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <!-- Location Title Label -->
    <TextView
        android:id="@+id/jobLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>

    <!-- Job Location -->
    <TextView
        android:id="@+id/jobLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <!-- Other fields (Salary, Phone, etc.) can go here... -->



    <TextView
        android:id="@+id/jobSalaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>



    <TextView android:id="@+id/jobSalary"
        android:layout_width="wrap_content"
        android:text="Salary "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"/>

    <!-- Location Title Label -->
    <TextView
        android:id="@+id/jobPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>

    <TextView android:id="@+id/jobPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>
</LinearLayout>
