<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/detailTitle" android:textSize="20sp" android:textStyle="bold" android:layout_height="0dp"/>
        <TextView android:id="@+id/detailLocation"
            android:layout_height="0dp" />
        <TextView android:id="@+id/detailSalary"  android:layout_height="0dp"/>
        <TextView android:id="@+id/detailPhone"  android:layout_height="0dp"/>
        <TextView android:id="@+id/detailDescription" android:layout_marginTop="8dp" android:layout_height="0dp"/>

        <Button
            android:id="@+id/bookmarkButton"
            android:layout_marginTop="12dp"
            android:text="Bookmark Job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
